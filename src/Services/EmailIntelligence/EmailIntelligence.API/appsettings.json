{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "EmailIntelligence": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Server=localhost;Database=EmailIntelligenceDb;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "LLMSettings": {
    "ApiKey": "your-openai-api-key-here",
    "BaseUrl": "https://api.openai.com",
    "Model": "gpt-4",
    "MaxTokens": 1000,
    "Temperature": 0.7,
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "EnableCaching": true,
    "CacheExpirationMinutes": 60
  },
  "MessageBroker": {
    "Host": "amqp://localhost:5672",
    "UserName": "guest",
    "Password": "guest"
  }
}
