{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "üöÄ Run EmailIntelligence with Docker Compose",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"-f",
				"docker-compose.yml",
				"-f",
				"docker-compose.override.yml",
				"up",
				"-d"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "üî® Build EmailIntelligence",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/src/Services/EmailIntelligence/EmailIntelligence.API/EmailIntelligence.API.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "üîÑ Rebuild EmailIntelligence Docker",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"build",
				"--no-cache",
				"emailintelligence.api"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "‚èπÔ∏è Stop Docker Services",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"down"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "üìä View Docker Logs",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"logs",
				"-f",
				"emailintelligence.api"
			],
			"group": "test",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "üê≥ Show Running Containers",
			"type": "shell",
			"command": "docker",
			"args": [
				"ps",
				"--format",
				"table {{.Names}}\\t{{.Image}}\\t{{.Status}}\\t{{.Ports}}"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}